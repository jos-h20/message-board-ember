
{{#if editQuestionForm}}
  <h4>Edit {{question.author}}'s question:</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author:</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="content">Question:</label>
          {{input value=content id="content" placeholder=question.content}}
        </div>

        <div class="form-group">
          <label for="notes">Notes:</label>
          {{input value=notes id="notes" placeholder=question.notes}}
        </div>

        <div class="form-group">
          <label for="category">Category:</label>
          {{#x-select value=category id='category' placeholder=question.category}}
            {{#x-option value="nature"}}Nature{{/x-option}}
            {{#x-option value='philosophy'}}Philosophy{{/x-option}}
            {{#x-option value='art'}}Art{{/x-option}}
          {{/x-select}}
        </div>

        <button class="btn"{{action 'edit' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn ques"{{action 'editQuestionForm'}}>Edit Question</button>
{{/if}}

{{#if addNewAnswer}}
<section class="">
  <h3>New Answer:</h3>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="author">Name:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="answer">Answer: </label>
        {{input type="answer" value=answer id="answer"}}
      </div>

      <button class="btn saveBtn" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
</section>
{{else}}
<div class="container">
  <div class="comment text-center">
    <h2 class="text-center" {{action 'answerFormShow'}}> Answer</h2>
  </div>
</div>
{{/if}}
